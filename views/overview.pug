doctype html
html
    head
        title="Concourse Pipelines Dashboard"
        link(rel='stylesheet' href='css/overview.css')
        meta(http-equiv="refresh" content="10")
    body
        .container
            center
                each pipeline in pipelines
                    a(href=config.concourse_url + pipeline.url)
                        div(class='pipeline ' + pipeline.status + ' ' + pipeline.display)
                            div(class='title')=pipeline.name
                            each buildStep in pipeline.buildSteps
                                div(class='build-step ' + buildStep.status)=buildStep.name
        .footer
            | Last Updated:
            script(type='text/javascript').
                document.write(new Date().toTimeString());
